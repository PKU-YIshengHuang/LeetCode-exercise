public class Solution {
    public List<List<Integer>> threeSum(int[] nums) {
        if(nums.length == 0)
            return 0;
        if(nums == null)
            return 0;
        ArrayList al = new ArrayList();
        for (int i=0;i<nums.length-2;i++)
            for (int j=i;j<num.length-1;j++)
                for (int k=j;k<num.length;k++)
                    if (nums[i]+nums[j]+nums[k]==0){
                        al.add(a[i]);
                        al.add(a[j]);
                        al.add(a[k]);
                    }
                        
       return al;                 
    }
}
